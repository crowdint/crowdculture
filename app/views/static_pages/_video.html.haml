- s = entry.box_size
.box.vid{:style => "background-color:#{get_color};", class: "col#{s}"}
  = render 'special_tag', entry: entry
  .box-inner
    .play
    .mask
      %a.video{:href => entry.content_url, target: '_blank'}
    %h1
      %a.video{href: entry.content_url, target:'_blank'}
        =entry.title
    %p
      %a.video{href: entry.content_url, target:'_blank'}
        Watch video
    = render 'social', entry: entry