%section#showcase
  #showcase-inner.masonry
    - @feeds.keys.each do |url|
      - @feeds[url].entries.each do |entry|  
        .box.masonry-brick
          .box-inner
            %img{:src => get_img_src(entry.summary)}/
            .cover
              .mask
                %a.zoom{:href => get_img_src(entry.summary), :rel => "gallery1", :title => entry.title}
              %h1
                %a.zoom{:href => get_img_src(entry.summary), :rel => "gallery2", :title => entry.title}
                  =entry.title

