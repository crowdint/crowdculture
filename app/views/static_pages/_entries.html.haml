- v = params[:page].nil? ? 'visibility:visible;' : 'visibility:hidden;'
-@entries.each do |entry|
  .box.masonry-brick{:style => v}
    .box-inner
      %img{:src => entry.img_url}/
      .mask
        %a.zoom{:href => entry.img_url, :alt => entry.title, :rel => "gallery1"}
      %h1
        %a.zoom{:href => entry.img_url, :alt => entry.title, :rel => "gallery2"}
          =entry.title
      .social-items
        %a.twitter-share-button{"data-lang" => "en", "data-text" => entry.title, "data-url" => entry.img_url, "data-via" => "crowdint", :href => "https://twitter.com/share"} Tweet