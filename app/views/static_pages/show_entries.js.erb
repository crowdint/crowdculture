<% if @entries.all.count>0 %>
  var page = <%=params[:page]%>
  var $boxes = $("<%= escape_javascript(render(partial: 'entries')) %>");
  $('#showcase-inner').append($boxes).masonry('appended', $boxes, true);
  $('#showcase-inner').imagesLoaded(function(){
    $('#showcase-inner').masonry('reload', function(){
      twttr.widgets.load();
      $boxes.css('visibility','visible');
    });
    $('.loading').hide();
    $('a#more-items').attr({'data-page':page+1,'data-ppage':"<%=params[:per_page]%>"}).css('display','block').show(); 
  });
  if (Modernizr.touch){
    if (!Modernizr.mq('only all and (max-width: 480px)')){
      $('.ghost').css('visibility','visible');
    }else
      $('.box .zoom').removeAttr('href');   
  } 
<% else %>
  $('.loading').hide();
<% end %>